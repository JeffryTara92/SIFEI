<UserControl x:Class="SIF.Visualization.Excel.View.RuleDataField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="50">
    <Grid Margin="1 1 1 1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="DataIcon" Grid.Column="0" Height="20" Width="20" VerticalAlignment="Top" HorizontalAlignment="Left"></Image>
        <TextBox x:Name="DataTextBox" Background="Transparent" Grid.Column="1" KeyDown="OnKeyDownHandler" Height="20" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
