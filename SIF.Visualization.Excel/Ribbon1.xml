<?xml version="1.0" encoding="UTF-8"?>
<customUI onLoad="Ribbon_Load" xmlns="http://schemas.microsoft.com/office/2006/01/customui">
    <ribbon>
        <tabs>
            <tab idMso="TabAddIns" label="INSPECTION">
                <group id="testGroup" label="Test">
                    <button id="testButton" imageMso="Synchronize" onAction="testButton_Click" screentip="Scans the current workbook." description="Scans the current workbook." label="Scan" size="large" />
                </group>
                <group id="viewGroup" label="View">
                    <button id="findingsButton" imageMso="LegendInsertGallery" onAction="findingsPaneButton_Click" screentip="Opens the findings pane." description="Opens the findings pane." label="Findings" size="large" />
                    <button id="clearButton" imageMso="ClearRow" onAction="clearButton_Click" screentip="Resets the document to the state before the test execution." description="Resets the document to the state before the test execution." label="Reset document" />
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>